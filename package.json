{
  "name": "@johnls/shovel",
  "private": false,
  "version": "2.3.0",
  "description": "An SSH and Node.js based IT automation tool",
  "bin": {
    "shovel": "dist/shovel.js"
  },
  "main": "dist/index.js",
  "type": "module",
  "files": [
    "dist/**"
  ],
  "scripts": {
    "start": "node src/shovel.js",
    "start:debug": "node --inspect-brk src/shovel.js",
    "test": "NODE_OPTIONS=--experimental-vm-modules NODE_NO_WARNINGS=1 npx jest",
    "show-coverage": "open coverage/lcov-report/index.html",
    "test:debug": "node --inspect-brk ./node_modules/jest-cli/bin/jest.js --runInBand",
    "deploy": "npm publish --access public"
  },
  "jest": {
    "collectCoverage": true,
    "automock": false,
    "testPathIgnorePatterns": [
      "dist/",
      "node_modules/",
      "scratch/"
    ],
    "transform": {}
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jlyonsmith/shovel.git"
  },
  "keywords": [
    "package",
    "project",
    "build",
    "release",
    "test",
    "start"
  ],
  "author": "John Lyon-Smith",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jlyonsmith/shovel/issues"
  },
  "homepage": "https://github.com/jlyonsmith/shovel#readme",
  "devDependencies": {
    "jest-cli": "^27.3.1"
  },
  "dependencies": {
    "@johnls/json5": "^2.3.0",
    "@johnls/readline-password": "^1.1.0",
    "@rauschma/stringio": "^1.4.0",
    "await-timeout": "^1.1.1",
    "camelcase": "^6.2.0",
    "chalk": "^4.1.2",
    "child-process-es6-promise": "^1.2.1",
    "command-exists": "^1.2.9",
    "fs-extra": "^10.0.0",
    "http-proxy-agent": "^5.0.0",
    "https-proxy-agent": "^5.0.0",
    "linux-os-info": "^2.0.0",
    "minimist": "^1.2.5",
    "node-fetch": "^3.0.0",
    "node-pty": "^0.10.1",
    "ora": "^6.0.1",
    "readdirp": "^3.6.0",
    "semver": "^7.3.5",
    "tar": "^6.1.11",
    "tempy": "^2.0.0",
    "validate.js": "^0.13.1",
    "yauzl-promise": "^2.1.3",
    "yazl": "^2.5.1"
  }
}
